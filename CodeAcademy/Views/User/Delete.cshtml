@model CodeAcademy.Models.User

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete User</h1>

<div class="container">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Are you sure you want to delete this user?</h3>
            <hr />
            <h4>User Information</h4>
            <dl class="row">
                <dt class="col-sm-2">Email</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-2">Password</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Password)</dd>

                <dt class="col-sm-2">Salt</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Salt)</dd>

                <dt class="col-sm-2">Role</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Role)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Username" />
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
