@model CodeAcademy.Models.User

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">User Details</h1>

<div class="container">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">User Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Email</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

                @if (Model.Role == "Teacher")
                {
                    // Display teacher-specific information
                    var teacherInfo = ViewBag.TeacherInfo as CodeAcademy.Models.Teacher;
                    <dt class="col-sm-2">Name</dt>
                    <dd class="col-sm-10">@teacherInfo?.Name</dd>
                    <dt class="col-sm-2">Surname</dt>
                    <dd class="col-sm-10">@teacherInfo?.Surname</dd>
                    <dt class="col-sm-2">Phone Number</dt>
                    <dd class="col-sm-10">@teacherInfo?.PhoneNumber</dd>
                }
                else if (Model.Role == "Student")
                {
                    // Display student-specific information
                    var studentInfo = ViewBag.StudentInfo as CodeAcademy.Models.Student;
                    <dt class="col-sm-2">Name</dt>
                    <dd class="col-sm-10">@studentInfo?.Name</dd>
                    <dt class="col-sm-2">Surname</dt>
                    <dd class="col-sm-10">@studentInfo?.Surname</dd>
                }
                else if (Model.Role == "Admin")
                {
                    // Display admin-specific information
                    var adminInfo = ViewBag.AdminInfo as CodeAcademy.Models.Administrator;
                    <dt class="col-sm-2">Name</dt>
                    <dd class="col-sm-10">@adminInfo?.Name</dd>
                    <dt class="col-sm-2">Surname</dt>
                    <dd class="col-sm-10">@adminInfo?.Surname</dd>
                }

                <dt class="col-sm-2">Role</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Role)</dd>

                <dt class="col-sm-2">Password</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Password)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Username">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>
