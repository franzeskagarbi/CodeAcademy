@{
    ViewBag.Title = "User Dashboard";
}

<h2>User Dashboard</h2>

<p>Welcome, @Context.Session.GetString("Username")</p>

@if (ViewBag.UserName != null)
{
    <p>Welcome, @ViewBag.UserName!</p>
}
else
{
    <p>Welcome, user!</p>
}
