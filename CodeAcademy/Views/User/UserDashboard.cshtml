@{
    ViewBag.Title = "User Dashboard";
}

<h2>User Dashboard</h2>

@if (ViewBag.UserName != null)
{
    <p>Welcome, @ViewBag.UserName!</p>
}
else
{
    <p>Welcome, user!</p>
}
<ul class="list-group">
<li class="list-group-item"><a class="text-decoration-none text-info" asp-controller="Administrators" asp-action="AssignRole">Assign Roles to Users</a></li>
    <li class="list-group-item"><a class="text-decoration-none text-info" asp-controller="Courses" asp-action="Index">Courses</a></li>

</ul>
