@model CodeAcademy.Models.Course

@{
    ViewData["Title"] = "Enroll";
}

<h1>Enroll in Course: @Model.Title</h1>

@if (!string.IsNullOrEmpty(ViewData["EnrollmentMessage"] as string))
{
    <div class="alert alert-success" role="alert">
        @ViewData["EnrollmentMessage"]
    </div>
}

@if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
{
    <div class="alert alert-danger" role="alert">
        @ViewData["ErrorMessage"]
    </div>
}

<form asp-action="Enroll" asp-controller="Courses" method="post">
    <input type="hidden" name="courseId" value="@Model.CourseId" />
    <button type="submit" class="btn btn-primary">Enroll</button>
</form>
