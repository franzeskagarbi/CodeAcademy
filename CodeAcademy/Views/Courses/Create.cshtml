@model CodeAcademy.Models.CreateCourseModel

@{
    ViewData["Title"] = "Create";
}
<style>
    .body{
        background-color: #ccffee;
    }
    .container {
        width: 1000px;
    }
</style>

<body style="background-color: #ccffee;">
<div class="container">
    <br />
    <h2 class="text-center" style="font-size: 2rem;">Course Info</h2>
    <br />
    <div class="row justify-content-center">
        <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" style="background-color: white; border: 1px solid black; border-radius: 0; width: 100%;" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeacherId" class="control-label"></label>
                    <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.TeacherId" style="background-color: white; border: 1px solid black; border-radius: 0; width: 100%;">
                    <option value="">-- Select Teacher --</option>
                </select>
                <span asp-validation-for="TeacherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" maxlength="300" style="background-color: white; border: 1px solid black; border-radius: 0; width: 100%;" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                    <input asp-for="Image" type="file" class="form-control" style="background-color: white; border: 1px solid black; border-radius: 0; width: 100%;" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"  />
            </div>
        </form>
    </div>
</div>
<br />
<br />
<br />
<div>
            <!-- <a asp-action="Index">Back to List</a>-->
        </div>
<br />
<br />
<br />
<br />
</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
