@model CodeAcademy.Models.CourseSection

@{
    ViewData["Title"] = "Delete";
}
<body style="background-color: #ccffee;">
<h1>Delete Section</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SectionName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SectionName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="SectionId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
    </form>
</div>
